{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "../dist/server",
    "baseUrl": "./",
    "paths": {
      "@kb-server": [ "src/*" ],
      "@kb-models": [ "src/models/index" ],
      "@kb-abstracts": [ "src/abstracts/index" ],
      "@kb-api": [ "src/api/index" ]
      
    },
    "incremental": true,
    "skipLibCheck": true
  }
}
